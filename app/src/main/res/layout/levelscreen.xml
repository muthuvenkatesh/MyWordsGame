<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shade"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/logoView"
        android:padding="5dp"
        android:src="@drawable/big_300"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Play Game  "
        android:id="@+id/playgame"
        android:background="@drawable/buttonshade"
        android:layout_below="@+id/logoView"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:id="@+id/selectlevel"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/playgame"
        android:layout_alignLeft="@+id/playgame"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:background="@drawable/buttonshade"
        android:layout_alignStart="@+id/playgame"
        android:layout_alignRight="@+id/playgame"
        android:layout_alignEnd="@+id/playgame" />

</RelativeLayout>